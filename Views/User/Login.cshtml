@model Lesson.ViewModels.UserAuthVms.LoginVm

@{
    ViewBag.Title = "Войти";
    Layout = "_Layout";
}

<h2>Войти</h2>
<a asp-action="Register" asp-controller="User">Зарегистрировать аккаунт</a>
<form asp-action="Login" asp-antiforgery="true" method="post">
    <div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input type="email" asp-for="Email">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password">
            <span asp-validation-for="Password"></span>
        </div>
    </div>
    <button class="btn btn-dark" type="submit">Войти</button>
</form>
