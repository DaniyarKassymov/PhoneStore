@model Lesson.ViewModels.BrandVms.AddBrandVm

@{
    ViewBag.Title = "Добавление бренда";
    Layout = "_Layout";
}

<h2>Добавление бренда</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Add" method="post">
            <div class="form-group mb-3">
                <label for="name" class="mb-2">Название</label>
                <input asp-for="Name"
                       type="text"
                       class="form-control"
                       id="name"
                       placeholder="Название">
                <span class="text-warning" asp-validation-for="Name"></span>
            </div>
            <div class="form-group mb-3">
                <label for="link" class="mb-2">Ссылка на страницу производителя</label>
                <input asp-for="Link"
                       type="text"
                       class="form-control"
                       id="link"
                       placeholder="Ссылка на страницу производителя">
            </div>
            <button type="submit" class="btn btn-outline-info mt-3">
                Создать
            </button>
        </form>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
